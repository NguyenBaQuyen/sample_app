<% @user ||= current_user %>
<div class="stats">
  <%= link_to user_relationships_path(@user, relationship: "following") do %>
  <strong id="following" class="stat">
    <%= @user.following.count %>
  </strong>
  Following
  <% end %>
  <%= link_to user_relationships_path(@user, relationship: "followers") do %>
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    Followers
  <% end %>
</div>
